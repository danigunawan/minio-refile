<%- model_class = Pokemon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <p>Use this site for reference data <%= link_to "Pokemondb", "http://pokemondb.net/evolution#evo-g1" %></p>
</div>
<div class="row">
    <% @pokemons.each do |pokemon| %>
  <div class="col-lg-2">
    <div class="thumbnail">
      <%= link_to attachment_image_tag(pokemon, :profile_image, :limit, 100, 100), pokemon_path(pokemon) %>      
      <div class="caption">
        <h4><%= pokemon.name %></h4>
        <p>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pokemon_path(pokemon), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pokemon_path(pokemon),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        
        </p>
      </div>
    </div>
  </div>
    <% end %>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pokemon_path,
            :class => 'btn btn-primary' %>
