<%- model_class = Pokemon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= attachment_image_tag(@pokemon, :profile_image, :limit, 600, 600) %>
      <div class="caption">
        <h3><%= @pokemon.name %></h3>
        <table class="table">
          <tr><td>HP</td><td><%= @pokemon.hp %></td></tr>
          <tr><td>Defense</td><td><%= @pokemon.defense %></td></tr>
          <tr><td>Attack</td><td><%= @pokemon.attack %></td></tr>
        </table> 
        <p>
          <%= link_to t('.back', :default => t("helpers.links.back")),
                        pokemons_path, :class => 'btn btn-default'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_pokemon_path(@pokemon), :class => 'btn btn-default' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        pokemon_path(@pokemon),
                        :method => 'delete',
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>
        </p>
      </div>
    </div>
  </div>
</div>


