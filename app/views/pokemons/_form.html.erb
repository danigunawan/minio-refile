<%= form_for @pokemon, :html => { :class => "form-horizontal pokemon" } do |f| %>

  <% if @pokemon.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pokemon.errors.count, "error") %> prohibited this pokemon from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pokemon.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :hp, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :hp, :class => 'form-control' %>
    </div>
    <%=f.error_span(:hp) %>
  </div>
  <div class="form-group">
    <%= f.label :attack, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :attack, :class => 'form-control' %>
    </div>
    <%=f.error_span(:attack) %>
  </div>
  <div class="form-group">
    <%= f.label :defense, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :defense, :class => 'form-control' %>
    </div>
    <%=f.error_span(:defense) %>
  </div>

  <%= f.attachment_field :profile_image %>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pokemons_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
